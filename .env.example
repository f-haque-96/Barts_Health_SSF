# NHS Supplier Setup Form - Environment Variables
# Copy this file to .env.local for local development
# Copy to .env.production for production deployment

# =============================================================================
# ENVIRONMENT MODE
# =============================================================================
# 'development' = localStorage + mock auth (local dev only)
# 'production' = API backend + Azure AD auth
VITE_APP_ENV=development

# =============================================================================
# BACKEND API CONFIGURATION (Production)
# =============================================================================
# Express.js Backend API URL
VITE_API_URL=http://localhost:3001/api

# =============================================================================
# AZURE AD AUTHENTICATION (Production)
# =============================================================================
# Azure AD Application (client) ID from App Registration
VITE_AZURE_CLIENT_ID=

# Azure AD Tenant ID (Barts Health NHS Trust)
VITE_AZURE_TENANT_ID=

# Redirect URI after authentication (must match App Registration)
VITE_AZURE_REDIRECT_URI=http://localhost:5173

# =============================================================================
# POWER AUTOMATE FLOW URLS (Optional - for SharePoint triggers)
# =============================================================================
# These are called by Power Automate, not directly from frontend
# Used for notifications and workflow triggers via SharePoint list changes

# Submit PBP Questionnaire (Section 2 submission)
VITE_API_SUBMIT_PBP=

# PBP Panel Decision endpoint
VITE_API_PBP_DECISION=

# Submit Full Form (Section 7 submission)
VITE_API_SUBMIT_FORM=

# Get Submission by ID
VITE_API_GET_SUBMISSION=

# Procurement Decision endpoint
VITE_API_PROCUREMENT_DECISION=

# OPW Panel Decision endpoint
VITE_API_OPW_DECISION=

# AP Control Completion endpoint
VITE_API_AP_COMPLETE=

# Document Upload endpoint
VITE_API_UPLOAD_DOCUMENT=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Show test authorization buttons (set to 'false' for production)
VITE_ENABLE_TEST_BUTTONS=false

# Enable debug logging in console
VITE_ENABLE_DEBUG_LOGGING=false

# Enable mock authentication (development only)
VITE_ENABLE_MOCK_AUTH=true

# =============================================================================
# APPLICATION URLS
# =============================================================================
# Base URL for the application (used in email links)
VITE_APP_BASE_URL=http://localhost:5173

# NHS Intranet URL (for VerseOne deployment)
VITE_INTRANET_URL=

# =============================================================================
# SHAREPOINT CONFIGURATION (Reference only - operations happen server-side)
# =============================================================================
# SharePoint Site: https://bartshealth.sharepoint.com/sites/NHS-Supplier-Forms
# Document Libraries:
#   - SupplierDocuments (business documents, can sync to Alemba)
#   - SensitiveDocuments (passports, driving licences - NEVER sync to Alemba)
# SQL Server Tables: Submissions, AuditTrail, SubmissionDocuments, VendorsReference
